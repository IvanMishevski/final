@model final.Models.Camp

@{
    ViewData["Title"] = "Create Camp";
}

<h2>Create New Camp</h2>

<div class="card">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Camp Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Latitude">Latitude</label>
            <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
            <span asp-validation-for="Latitude" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Longitude">Longitude</label>
            <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhotoUpload">Photo</label>
            <input asp-for="PhotoUpload" class="form-control" type="file" />
            <span asp-validation-for="PhotoUpload" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
