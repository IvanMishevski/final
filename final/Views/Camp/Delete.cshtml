@model final.Models.Camp

@{
    ViewData["Title"] = "Delete Camp";
}

<style>
    .delete-heading {
        color: #d9534f;
        font-weight: 600;
        border-bottom: 2px solid #d9534f;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .camp-card {
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

        .camp-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .camp-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-bottom: 2px solid #dee2e6;
        padding: 15px;
    }

    .camp-image {
        transition: all 0.3s ease;
        border: 3px solid #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

        .camp-image:hover {
            transform: scale(1.02);
        }

    .detail-label {
        color: #495057;
        font-weight: 600;
    }

    .detail-value {
        color: #212529;
    }

    .action-buttons {
        margin-top: 30px;
    }

    .delete-btn {
        background-color: #dc3545;
        border-color: #dc3545;
        transition: all 0.3s ease;
    }

        .delete-btn:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: scale(1.05);
        }

    .cancel-btn {
        transition: all 0.3s ease;
    }

        .cancel-btn:hover {
            transform: scale(1.05);
        }

    .alert-warning-custom {
        background-color: #fff3cd;
        border-left: 5px solid #ffc107;
        padding: 20px;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4 delete-heading">Delete Camp</h1>

    <div class="alert alert-danger text-center">
        <h3 class="mb-3">Are you sure you want to delete this camp?</h3>
        <p class="lead">This action cannot be undone.</p>
    </div>

    <div class="card mb-4 shadow camp-card">
        <div class="card-header camp-header">
            <h4 class="text-center mb-0">@Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-center mb-3 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <img src="@Model.PhotoPath" style="max-width: 100%; max-height: 300px;" class="img-fluid rounded camp-image" alt="@Model.Name" />
                    }
                    else
                    {
                        <div class="text-muted p-5 bg-light rounded">No image available</div>
                    }
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-md-end detail-label">Description</dt>
                        <dd class="col-sm-8 detail-value">@Model.Description</dd>

                        <dt class="col-sm-4 text-md-end detail-label">Latitude</dt>
                        <dd class="col-sm-8 detail-value">@Model.Latitude</dd>

                        <dt class="col-sm-4 text-md-end detail-label">Longitude</dt>
                        <dd class="col-sm-8 detail-value">@Model.Longitude</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center action-buttons">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg px-4 delete-btn">Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg px-4 ms-2 cancel-btn">Cancel</a>
        </form>
    </div>
</div>
