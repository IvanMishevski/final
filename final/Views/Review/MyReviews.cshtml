@model IEnumerable<final.Models.Review>

@{
    ViewData["Title"] = "My Reviews";
}

<style>
    .reviews-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .review-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .review-header {
        background-color: #2c3e50;
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .camp-name {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .review-rating {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .star {
        color: #f1c40f;
    }

    .review-body {
        padding: 20px;
    }

    .review-content {
        margin-bottom: 15px;
        line-height: 1.6;
    }

    .review-date {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .review-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn {
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .no-reviews {
        text-align: center;
        padding: 40px 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .no-reviews h3 {
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .no-reviews p {
            color: #7f8c8d;
            margin-bottom: 20px;
        }

    .btn-explore {
        background-color: #3498db;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
    }
</style>

<div class="reviews-container">
    <h1>My Reviews</h1>

    @if (!Model.Any())
    {
        <div class="no-reviews">
            <h3>You haven't written any reviews yet</h3>
            <p>Visit a camp page to share your experience!</p>
            <a href="@Url.Action("Index", "Home")" class="btn-explore">Explore Camps</a>
        </div>
    }
    else
    {
        foreach (var review in Model)
        {
            <div class="review-card">
                <div class="review-header">
                    <span class="camp-name">@review.Camp.Name</span>
                    <div class="review-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="star">@(i <= review.Rating ? "★" : "☆")</span>
                        }
                    </div>
                </div>
                <div class="review-body">
                    <div class="review-date">Posted on @review.CreatedAt.ToString("MMMM dd, yyyy")</div>
                    <div class="review-content">@review.Content</div>
                    <div class="review-actions">
                        <a href="@Url.Action("Details", "Camp", new { id = review.CampId })" class="btn btn-primary">View Camp</a>
                        <a href="@Url.Action("Edit", "Review", new { id = review.Id })" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@review.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>