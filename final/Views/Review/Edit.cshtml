@model final.Models.ReviewViewModel

@{
    ViewData["Title"] = "Edit Review";
}

<style>
    .review-edit-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .edit-card {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
    }

    .edit-card-header {
        background-color: #2c3e50;
        color: white;
        padding: 15px 20px;
        font-weight: 500;
    }

    .edit-card-body {
        padding: 25px;
    }

    .form-group label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    textarea.form-control {
        min-height: 120px;
    }

    .text-muted {
        font-size: 0.85rem;
    }

    .btn-action {
        padding: 10px 20px;
        font-weight: 500;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    .btn-secondary {
        background-color: #7f8c8d;
        border-color: #7f8c8d;
    }

    .btn-secondary:hover {
        background-color: #6c7a7d;
        border-color: #6c7a7d;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .validation-summary-errors {
        color: #e74c3c;
        background-color: #fadbd8;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .field-validation-error {
        color: #e74c3c;
        font-size: 0.85rem;
        display: block;
        margin-top: 5px;
    }

    .camp-name {
        font-weight: 600;
    }
</style>

<div class="review-edit-container">
    <div class="edit-card">
        <div class="edit-card-header">
            <h4 class="mb-0">Edit Your Review for <span class="camp-name">@ViewBag.CampName</span></h4>
        </div>
        <div class="edit-card-body">
            <form asp-action="Edit" asp-route-id="@ViewBag.ReviewId">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
                <input type="hidden" asp-for="CampId" />

                <div class="form-group mb-4">
                    <label asp-for="Rating" class="control-label">Rating (1-5)</label>
                    <select asp-for="Rating" class="form-control">
                        <option value="1">1 - Poor</option>
                        <option value="2">2 - Fair</option>
                        <option value="3">3 - Good</option>
                        <option value="4">4 - Very Good</option>
                        <option value="5">5 - Excellent</option>
                    </select>
                    <span asp-validation-for="Rating" class="field-validation-error"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Content" class="control-label">Review Content</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Share your experience at this campsite..."></textarea>
                    <span asp-validation-for="Content" class="field-validation-error"></span>
                    <small class="text-muted">Please provide a detailed review with at least 10 characters.</small>
                </div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-primary btn-action">Save Changes</button>
                    <a asp-controller="Camp" asp-action="Details" asp-route-id="@Model.CampId" class="btn btn-secondary btn-action">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
